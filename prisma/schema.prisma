generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  rides         Ride[]
}

model Ride {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  startTime     DateTime
  endTime       DateTime?
  distance      Float?
  averageSpeed  Float?
  maxSpeed      Float?
  fuelEfficiency Float?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
} 